<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.md2k.beacon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/app_theme_teal_light"
        tools:replace="android:theme">
        <activity android:name=".ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.md2k.beacon.ActivitySettings"
            android:enabled="true"
            android:exported="true"
            android:label="Settings"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="org.md2k.motionsense.ActivitySettings" />
            </intent-filter>
            >
        </activity>
        <activity
            android:name="org.md2k.utilities.permission.ActivityPermission"
            android:enabled="true"
            android:exported="true"
            android:label="Permission"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.md2k.beacon.ActivitySettingsPlatform"
            android:enabled="true"
            android:exported="true"
            android:label="Settings: MotionSense"
            android:screenOrientation="portrait" />

        <service
            android:name=".ServiceBeacon"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>